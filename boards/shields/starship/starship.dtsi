#include <dt-bindings/zmk/matrix_transform.h>
#include "starship-layouts.dtsi"

&physical_layout0 {
	transform = <&default_transform>;
};

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,physical-layout = &physical_layout0;
	};
	
	default_transform: keymap_transform0 {
		compatible = "zmk,matrix-transform";
		columns = <14>;
		rows = <6>;
		map = <
			                RC(0,2) RC(0,3) RC(0,4) RC(0,5)                  RC(0,8) RC(0,9) RC(0,10) RC(0,11)
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                  RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                  RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
			RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)                                  RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13)
			                                                RC(4,6)  RC(4,7)
			                                                RC(5,6)  RC(5,7)
		>;
	};

	kscan0: kscan0 {
		compatible = "zmk,kscan-gpio-matrix";
		diode-direction = "col2row";
		wakeup-source;
	};
};
